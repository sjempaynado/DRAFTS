- name: Install required packages
  apt:
    name:
      - keystone
    state: present

- name: Configure Keystone
  command: keystone-manage db_sync
  args:
    chdir: /etc/keystone
  become_user: keystone

- name: Initialize Fernet key
  command: keystone-manage fernet_setup
  become_user: keystone

 - name: Start Keystone service
   systemd:
     name: "keystone"
     state: started
     enabled: yes

